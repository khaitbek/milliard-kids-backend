generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  TEACHER
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String 
  password String
  role Role @default(USER)
  profileImg String?
}
